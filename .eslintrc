{
  "root": true,
  "extends": [
    "airbnb"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "classes": true
    }
  },
  "rules": {
    "linebreak-style": 0,
    "no-console": "off",
    "indent": 2,
    "trailingComma": false,
    "one-var": 1,
    "one-var-declaration-per-line": 1,
    "new-cap": 1,
    "no-trailing-spaces": 1,
    "comma-dangle": 0,
    "consistent-return": 1,
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": true
      }
    ]
  }
}